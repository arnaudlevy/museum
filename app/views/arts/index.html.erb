<h1>Arts</h1>



<div class="row">
  <% @arts.each do |art| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <img src="<%= art.photo %>" class="img-fluid" />
        <div class="card-body">
          <p class="card-text"><%= art.title %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', art %></button>
              <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_art_path(art) %></button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Art', new_art_path, class: 'btn btn-primary' %>
